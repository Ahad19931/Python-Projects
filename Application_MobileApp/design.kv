<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User Login"
                font_size: '20sp'
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                password: True
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password"
                on_press: root.forgot_password()
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                text: "Sign Up"
                on_press: root.sign_up()
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "Sign up to Cheer self up!"
            font_size: '20sp'
        TextInput:
            id: username
            hint_text: "New Username"
        TextInput:
            id: password
            hint_text: "New Password"
        RelativeLayout:
            Button:
                text: "Summit"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)
                size_hint: 0.3, 0.4
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful"
            font_size: '20sp'
        RelativeLayout:
            Button:
                text: "Back to Login Page"
                on_press: root.go_to_login()
                size_hint: 0.5, 0.3
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: "logout_hover.png" if self.hovered else "logout_nothover.png"
                size_hint: 0.35, 0.35
                pos_hint: {'center_x':0.93, 'center_y': 0.8}
        Label:
            text: "How do you feel?"
            font_size: '20sp'
        TextInput:
            id: feeling
            hint_text: "Things to try: happy, sad, unloved..."
        Button:
            text: "Enlighten me"
            on_press: root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id: quote
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<ForgotPasswordScreen>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        Label:
            text: "Enter Username"
            font_size: '20sp'
        TextInput:
            id: username
            hint_text: "Username"
            size_hint: 1, 0.6
        Label:
            id: confirm_username
            text: ""
            color: 1, 0, 0, 1
        RelativeLayout:
            Button:
                text: "Submit"
                on_press: root.check_username(root.ids.username.text)
                size_hint: 0.4, 0.4
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}

<EnterNewPasswordScreen>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        Label:
            text: "Enter new password"
            font_size: '20sp'
        TextInput:
            id: new_password
            hint_text: "Enter new password"
        TextInput:
            id: confirm_new_password
            hint_text: "Confirm new password"
        Label:
            id: password_check
            text:""
            bold: True
            color: 0.1, 0.7, 1, 1
        RelativeLayout:
            Button:
                text: "Save"
                on_press: root.save_password(root.ids.new_password.text, root.ids.confirm_new_password.text)
                size_hint: 0.3, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        Button:
            text: "Return to login page"
            on_press: root.return_to_login()
            background_color: 1, 1, 1, 0
            opacity: 1 if self.state == 'normal' else 0.5
            color: 0.1, 0.7, 1, 1

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "signup_screen"
    SignUpScreenSuccess:
        name: "signup_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"
    ForgotPasswordScreen:
        name: "forgot_password_screen"
    EnterNewPasswordScreen:
        name: "enter_new_password_screen"
    